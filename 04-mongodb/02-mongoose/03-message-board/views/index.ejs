<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dojo Message Board</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css'>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Dojo Message Board</h1>
        <hr>
        <form action="/message" method="post">
            <label for="name">Name:</label>
            <input type="text" name="name" id="">
            <label for="message">Message:</label>
            <textarea name="message" id="message" cols="30" class="u-full-width"></textarea>
            <br>
            <br>
            <input type="submit" value="Post message">
        </form>

        <div class="messages">
                <% for (message of messages) { %>
                    <p>Name: <%= message.name %></p>
                    <p>Message: <%= message.message %></p>
                    <% if (typeof message.comments !== 'undefined') { %>
                        <% for (comment of message._comments) { %>
                            <p style="text-indent: 40px; font-size: 10px;">Name: <%= comment.name %></p>
                            <p style="text-indent: 40px; font-size: 10px;">Comment: <%= comment.comment %></p>
                        <% } %>
                    <% } %>
                        <div class="comment_form">
                            <form action="/comment" method="post">
                                <label for="name">Name:</label>
                                <input type="text" name="name">
                                <label for="comment">Comment:</label>
                                <textarea name="comment" cols="30" class="u-full-width"></textarea>
                                <input type="hidden" name="id" value="<%= message.id %>">
                                <br>
                                <input type="submit" value="Comment">
                            </form>
                        </div>
                <% } %>
        </div>
</body>
</html>