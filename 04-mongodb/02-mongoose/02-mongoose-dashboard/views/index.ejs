<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Puppy Party</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css'>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Puppy Party</h1>
        <% for (const dog in dogs) { %>
            <p>Name: <a href="/<%= dog._id %>"><%= dog.name %></a>
            <a href="/puppies/edit/<%= dog._id %>/"><button>Edit dog</button></a>
            <form action="/puppies/destroy/<%= dog._id %>/" method='post'>
                <input type="submit" value="Delete">
            </form>
            </p>
        <% } %>
        <a href="/puppies/new">Create a new puppy!</a>
    </div>
</body>
</html>